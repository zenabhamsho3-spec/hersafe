<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!-- ============================================= -->
    <!--  1. المحتوى الرئيسي (الشاشة التي تظهر أولاً)  -->
    <!-- ============================================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_diagonal_home">

        <!-- زر القائمة (الهامبرغر) -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="24dp"
            android:padding="8dp"
            android:src="@drawable/setting"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/hersafe_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- العنوان -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="HerSafe"
            android:textColor="@color/hersafe_title"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حمايتك أولويتنا"
            android:textColor="@color/hersafe_title"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAppName" />

        <!-- زر SOS الكبير -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnSOS"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#D32F2F"
            app:cardCornerRadius="100dp"
            app:cardElevation="12dp"
            app:strokeColor="#FFEBEE"
            app:strokeWidth="6dp"
            app:layout_constraintBottom_toTopOf="@+id/gridContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitle"
            app:layout_constraintVertical_bias="0.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_notification" app:tint="#FFFFFF"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="SOS" android:textColor="#FFFFFF" android:textSize="36sp" android:textStyle="bold" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="اضغطي للطوارئ" android:textColor="#FFEBEE" android:textSize="14sp" />
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="match_parent" android:background="?attr/selectableItemBackgroundBorderless"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- شبكة الأزرار -->
        <GridLayout
            android:id="@+id/gridContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true"
            app:layout_constraintTop_toBottomOf="@+id/btnSOS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.4">

            <!-- Helpline -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnHelpline"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/baseline_call_24" app:tint="@color/hersafe_title" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="الخط الساخن" android:textColor="@color/hersafe_title" android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Camera -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnCamera"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:id="@+id/imgCameraIcon" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_camera_alt" app:tint="@color/hersafe_title" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="الكاميرا" android:textColor="@color/hersafe_title" android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Location -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnLocation"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_location_on" app:tint="@color/hersafe_title" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="موقعي" android:textColor="@color/hersafe_title" android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Parents -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnParents"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_group" app:tint="@color/hersafe_title" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="الأهل" android:textColor="@color/hersafe_title" android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============================================= -->
    <!--  2. القائمة الجانبية (Navigation View)        -->
    <!-- ============================================= -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/hersafe_title"
        app:itemTextColor="@color/hersafe_title"
        app:itemBackground="@drawable/nav_item_background"
        app:itemIconPadding="16dp"
        app:itemHorizontalPadding="24dp" />

</androidx.drawerlayout.widget.DrawerLayout>